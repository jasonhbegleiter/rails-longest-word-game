<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

<div class="container">
  <div class="letters">
    <% @letters.each do |letter| %>
    <div class="letter"><%= letter.upcase %></div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="forms">
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-group">
        <input type="text" name="word" placeholder="Your Word Here..." class="form-control">
        <input name="letters" type="hidden" value = <%= @letters.join %> />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit, Yo!</button>
      </div>
    </form>
  </div>
</div>
